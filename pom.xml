    <groupId>org.pachinko</groupId>
    <artifactId>axieshop</artifactId>
    <packaging>war</packaging>
    <version>0.0.1-SNAPSHOT</version>
    <name>axieshop</name>
    <url>http://maven.apache.org</url>

    <repositories>
        <repository>
